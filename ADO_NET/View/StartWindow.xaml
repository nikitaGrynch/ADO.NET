<Window x:Class="ADO_NET.View.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO_NET"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="300">
    <StackPanel>
        <Label Content="ADO.NET"
               FontSize="24"
               FontWeight="DemiBold"
               HorizontalAlignment="Center" />
        <Button x:Name="BasicsButton"
                Content="1. Вступление. Основы"
                Margin="20 10"
                Padding="15 5"
                HorizontalContentAlignment="Left" 
                Click="BasicsButton_Click"/>
        <Button x:Name="OrmButton"
                Content="2. ORM. Отображение"
                Margin="20 10"
                Padding="15 5"
                HorizontalContentAlignment="Left" 
                Click="OrmButton_Click"/>
        <Button x:Name="Dalutton"
                Content="3. DAL. Контекст данных"
                Margin="20 10"
                Padding="15 5"
                HorizontalContentAlignment="Left" 
                Click="Dalutton_Click"/>
    </StackPanel>
</Window>
